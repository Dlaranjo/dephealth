---
import Layout from '../layouts/Layout.astro';

const tiers = [
  {
    name: 'Free',
    price: '$0',
    period: 'forever',
    description: 'Perfect for trying out PkgWatch',
    features: [
      '5,000 requests/month',
      'Health scores & risk levels',
      'CLI & GitHub Action',
      'Community support',
    ],
    cta: 'Get Started',
    ctaLink: '/signup',
    highlighted: false,
    tier: null,
  },
  {
    name: 'Starter',
    price: '$9',
    period: '/month',
    description: 'For individual developers',
    features: [
      '25,000 requests/month',
      'Everything in Free',
      'Email support',
    ],
    cta: 'Upgrade',
    ctaLink: null,
    highlighted: false,
    tier: 'starter',
  },
  {
    name: 'Pro',
    price: '$29',
    period: '/month',
    description: 'For teams with growing needs',
    features: [
      '100,000 requests/month',
      'Everything in Starter',
      'Priority API access',
      'Usage analytics',
    ],
    cta: 'Upgrade',
    ctaLink: null,
    highlighted: true,
    tier: 'pro',
  },
  {
    name: 'Business',
    price: '$99',
    period: '/month',
    description: 'For organizations at scale',
    features: [
      '500,000 requests/month',
      'Everything in Pro',
      'SLA guarantee',
      'Dedicated support',
      'Custom integrations',
    ],
    cta: 'Upgrade',
    ctaLink: null,
    highlighted: false,
    tier: 'business',
  },
];
---

<Layout title="Pricing | PkgWatch" mainClass="max-w-7xl mx-auto px-4 py-24 pt-32">
    <div class="text-center mb-16">
      <h1 class="text-4xl font-bold text-white mb-4">
        Simple, transparent pricing
      </h1>
      <p class="text-xl text-zinc-400">
        Start free, upgrade as you grow
      </p>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {tiers.map((tier) => (
        <div
          class={`rounded-2xl p-8 ${
            tier.highlighted
              ? 'bg-gradient-to-b from-emerald-500/20 to-transparent border-2 border-emerald-500/50'
              : 'bg-zinc-900/50 border border-zinc-800'
          }`}
        >
          <h3 class="text-xl font-semibold text-white mb-2">{tier.name}</h3>
          <div class="mb-4">
            <span class="text-4xl font-bold text-white">{tier.price}</span>
            <span class="text-zinc-400">{tier.period}</span>
          </div>
          <p class="text-zinc-400 mb-6">{tier.description}</p>

          <ul class="space-y-3 mb-8">
            {tier.features.map((feature) => (
              <li class="flex items-center gap-2 text-zinc-300">
                <svg class="w-5 h-5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                {feature}
              </li>
            ))}
          </ul>

          {tier.tier ? (
            <button
              data-tier={tier.tier}
              class={`block w-full text-center px-6 py-3 rounded-lg font-semibold transition cursor-pointer ${
                tier.highlighted
                  ? 'btn-gradient text-white'
                  : 'bg-zinc-800 text-white hover:bg-zinc-700'
              }`}
            >
              {tier.cta}
            </button>
          ) : (
            <a
              href={tier.ctaLink}
              class={`block w-full text-center px-6 py-3 rounded-lg font-semibold transition ${
                tier.highlighted
                  ? 'btn-gradient text-white'
                  : 'bg-zinc-800 text-white hover:bg-zinc-700'
              }`}
            >
              {tier.cta}
            </a>
          )}
        </div>
      ))}
    </div>

    <!-- FAQ -->
    <div class="mt-24">
      <h2 class="text-2xl font-bold text-white text-center mb-12">
        Frequently Asked Questions
      </h2>
      <div class="grid md:grid-cols-2 gap-8">
        <div>
          <h3 class="text-lg font-semibold text-white mb-2">
            What counts as a request?
          </h3>
          <p class="text-zinc-400">
            Each API call counts as one request. A scan of 100 dependencies
            counts as one request, not 100.
          </p>
        </div>
        <div>
          <h3 class="text-lg font-semibold text-white mb-2">
            Can I upgrade or downgrade anytime?
          </h3>
          <p class="text-zinc-400">
            Yes, you can change your plan at any time. Upgrades take effect
            immediately, downgrades at the end of your billing period.
          </p>
        </div>
        <div>
          <h3 class="text-lg font-semibold text-white mb-2">
            What happens if I exceed my limit?
          </h3>
          <p class="text-zinc-400">
            Requests beyond your limit won't be processed until the next billing cycle.
            You can upgrade anytime to increase your limit.
          </p>
        </div>
        <div>
          <h3 class="text-lg font-semibold text-white mb-2">
            Do you offer enterprise plans?
          </h3>
          <p class="text-zinc-400">
            Yes! Contact us at <a href="mailto:enterprise@pkgwatch.laranjo.dev" class="text-blue-400 hover:underline">enterprise@pkgwatch.laranjo.dev</a> for custom enterprise pricing
            with higher limits and dedicated support.
          </p>
        </div>
      </div>
    </div>
</Layout>

<script>
  const API_BASE = 'https://api.pkgwatch.laranjo.dev';

  const TIER_ORDER: Record<string, number> = { free: 0, starter: 1, pro: 2, business: 3 };

  function tierOrder(tier: string | null): number {
    return TIER_ORDER[tier || 'free'] || 0;
  }

  // Check if user is logged in and get their tier
  async function checkAuth(): Promise<{ tier: string; email: string } | null> {
    try {
      const response = await fetch(`${API_BASE}/auth/me`, {
        credentials: 'include',
      });
      if (response.ok) {
        return await response.json();
      }
    } catch (e) {
      console.error('Auth check failed:', e);
    }
    return null;
  }

  // Create checkout session and redirect
  async function startCheckout(tier: string, button: HTMLButtonElement) {
    const originalText = button.textContent;
    button.disabled = true;
    button.textContent = 'Loading...';

    try {
      const response = await fetch(`${API_BASE}/checkout/create`, {
        method: 'POST',
        credentials: 'include',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ tier }),
      });

      const data = await response.json();

      if (response.ok && data.checkout_url) {
        // Redirect to Stripe Checkout
        window.location.href = data.checkout_url;
      } else if (response.status === 401) {
        // Not logged in - redirect to login with return URL
        window.location.href = `/login?redirect=${encodeURIComponent('/pricing')}`;
      } else if (response.status === 409 && data.error?.code === 'upgrade_required') {
        // Existing subscriber - redirect to billing portal for plan changes
        button.disabled = false;
        button.textContent = originalText;
        await redirectToBillingPortal();
      } else {
        alert(data.error?.message || 'Failed to start checkout');
        button.disabled = false;
        button.textContent = originalText;
      }
    } catch (error) {
      console.error('Checkout error:', error);
      alert('Network error. Please try again.');
      button.disabled = false;
      button.textContent = originalText;
    }
  }

  // Redirect to Stripe billing portal for existing subscribers
  async function redirectToBillingPortal() {
    try {
      const response = await fetch(`${API_BASE}/billing-portal/create`, {
        method: 'POST',
        credentials: 'include',
      });
      const data = await response.json();
      if (data.portal_url) {
        window.location.href = data.portal_url;
      } else {
        alert('Unable to open billing portal. Please try again.');
      }
    } catch {
      alert('Network error. Please try again.');
    }
  }

  // Initialize on page load
  async function init() {
    const user = await checkAuth();
    const currentTier = user?.tier || null;

    // Update buttons based on auth state and current tier
    document.querySelectorAll<HTMLButtonElement>('[data-tier]').forEach((button) => {
      const tier = button.dataset.tier;
      if (!tier) return;

      if (currentTier === tier) {
        button.textContent = 'Current Plan';
        button.disabled = true;
        button.classList.add('opacity-50', 'cursor-not-allowed');
        button.classList.remove('cursor-pointer');
      } else if (user && tierOrder(tier) < tierOrder(currentTier)) {
        // User is on a higher tier - show disabled downgrade
        button.textContent = 'Current: ' + (currentTier?.charAt(0).toUpperCase() + currentTier?.slice(1));
        button.disabled = true;
        button.classList.add('opacity-50', 'cursor-not-allowed');
        button.classList.remove('cursor-pointer');
      } else {
        // Available for upgrade
        button.addEventListener('click', () => startCheckout(tier, button));
      }
    });
  }

  // Handle URL parameters for feedback
  const params = new URLSearchParams(window.location.search);
  if (params.get('cancelled') === 'true') {
    // Could show a toast/notification here if desired
    console.log('Checkout was cancelled');
  }

  init();
</script>
